# JWT Secret for authentication (required)
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random

# Server Port (optional, defaults to 5000)
PORT=5000

# AI Provider (optional, defaults to rule-based)
# Options: rule-based, openai, huggingface, local
AI_PROVIDER=rule-based

# OpenAI API Key (only needed if AI_PROVIDER=openai)
# OPENAI_API_KEY=your_openai_api_key_here

# Hugging Face API Key (only needed if AI_PROVIDER=huggingface)
# HUGGINGFACE_API_KEY=your_huggingface_token_here

# Database Path (optional, defaults to ./conversations.db)
# DATABASE_PATH=./conversations.db
